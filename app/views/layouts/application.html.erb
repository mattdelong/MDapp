<!DOCTYPE html>
<html>
  <head>
    <title> <%= title %> </title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render 'layouts/header' %> 
    <div id= "search">
      search container
    </div>
    <div class = "container">
      <section>	
	    <% if flash[:notice] %>
          <div class="flash">
            <%= flash[:notice] %>
          </div>
        <% end %>
	    <%= yield %>
      </section>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>
